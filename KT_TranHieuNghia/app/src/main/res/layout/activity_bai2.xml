<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="#277E2B"
        android:text="Chuyển đổi năm dương lịch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="0.75"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Năm [ Dương lịch ]"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/duonglich"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:ems="10"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:text="" />

        <Button
            android:id="@+id/chuyendoi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1.25"
            android:onClick="chuyendoi"
            android:text="chuyển đổi"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/namam"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Năm [ Âm lịch ]"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amlich"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#F8E011"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1.25"
            android:text="" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#469F4A"
        android:layout_weight="0.5"
        android:text="" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img" />

</LinearLayout>